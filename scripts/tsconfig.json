{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "declarationDir": "../types/lib",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["../src/*"]
    },
    "lib": ["es2015", "dom", "dom.iterable", "ScriptHost"]
  },
  "include": ["../src/**/*.ts", "../src/**/*.tsx"],
  "exclude": ["../node_modules", "../src/components/__mocks__"]
}
