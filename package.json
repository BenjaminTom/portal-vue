{
  "name": "portal-vue",
  "version": "3.0.0-alpha.0",
  "license": "MIT",
  "repository": "https://github.com/LinusBorg/portal-vue",
  "author": {
    "name": "Thorsten LÃ¼nborg",
    "url": "https://github.com/LinusBorg/"
  },
  "private": false,
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lib:build": "microbundle build --name PortalVue",
    "lib:dev": "microbundle watch --no-compress --no-pkg-main -u src/index.ts -o dist/portal-vue.esm.js -f es",
    "serve": "vue-cli-service serve example/main.ts",
    "serve:prod": "vue-cli-service serve --mode production example/main.ts",
    "roll": "ROLL=1 node ./scripts/build && yarn minify",
    "minify": "minify dist/portal-vue.umd.js --out-file dist/portal-vue.umd.min.js",
    "lint": "vue-cli-service lint",
    "test": "yarn test:unit",
    "test:unit": "vue-cli-service test:unit"
  },
  "source": "src/index.ts",
  "main": "dist/portal-vue.js",
  "module": "dist/portal-vue.esm.js",
  "esmodule": "dist/portal-vue.esm.modern.js",
  "browser": {
    "./esm": "dist/portal-vue.esm.js",
    "./modern": "dist/portal-vue.esm.modern.js"
  },
  "jsdelivr": "dist/portal-vue.umd.min.js",
  "unpkg": "dist/portal-vue.umd.min.js",
  "types": "./types/index.d.ts",
  "files": [
    "src",
    "dist",
    "nuxt",
    "types"
  ],
  "peerDependencies": {
    "vue": "^3.0.0-0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "@vue/cli-plugin-babel": "^4.5.8",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "@vue/cli-plugin-typescript": "^4.5.8",
    "@vue/cli-plugin-unit-jest": "^4.5.8",
    "@vue/cli-service": "^4.5.8",
    "@vue/compiler-sfc": "^3.0.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^7.1.0",
    "lint-staged": "^10.4.2",
    "microbundle": "^0.12.4",
    "nanoid": "^3.1.13",
    "node-sass": "^4.9.2",
    "prettier-eslint": "^11.0.0",
    "sass-loader": "^10.0.3",
    "typescript": "~3.9.3",
    "vue": "^3.0.0-0",
    "vue-router": "^4.0.0-0",
    "vuepress": "1.7.1"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
